<Card>
    <CardBody>
        <ApexChart TItem="Order"
                   Title="Mixed"
                   ChartType="ChartType.Line"
                   Debug
                   Options=options>


            <ApexSeries TItem="Order"
                        Items="orders"
                        Name="Gross Value"
                        XValue="@(e => e.Country)"
                        YAggregate="@(e => e.Sum(e => e.GrossValue))"
                        OrderByDescending="e=>e.Y"
                        MixedType="MixedType.Column" />

            <ApexSeries TItem="Order"
                        Items="orders"
                        Name="Net Value"
                        XValue="@(e => e.Country)"
                        YAggregate="@(e => e.Sum(e => e.NetValue))"
                        OrderByDescending="e=>e.Y"
                        MixedType="MixedType.Line" />
        </ApexChart>

    </CardBody>
</Card>
